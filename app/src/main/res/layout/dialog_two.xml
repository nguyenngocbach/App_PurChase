<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:background="@drawable/custom_dialog"
    android:layout_height="wrap_content">

    <com.bachnn.myapplication.view.CustomView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <ImageView
                android:id="@+id/img_dialog"
                android:layout_gravity="center"
                android:layout_width="160dp"
                android:src="@drawable/yeu_em"
                android:layout_height="160dp"
                android:scaleType="centerCrop"
                android:layout_marginTop="10dp"
                />
            <TextView
                android:id="@+id/name_item_pick"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="Ao Quáº§n"
                android:textSize="20dp"
                android:textStyle="bold"
                android:textColor="@color/blue"
                android:padding="5dp"
                android:layout_height="wrap_content"/>
            <TextView
                android:id="@+id/item_price"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:text="2000000"
                android:textSize="18dp"
                android:textStyle="bold"
                android:textColor="@color/color_red"
                android:padding="5dp"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                >
                <Button
                    android:id="@+id/btn_decrease"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="-"
                    />
                <EditText
                    android:id="@+id/edt_total"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:enabled="false"
                    android:inputType="number"
                    android:text="0"
                    />
                <Button
                    android:id="@+id/btn_increase"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:text="+"
                    />
            </LinearLayout>
            <TextView
                android:id="@+id/total_price"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:gravity="center"
                android:textSize="18dp"
                android:textStyle="bold"
                android:text="0"
                android:textColor="@color/color_red"
                android:padding="5dp"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginTop="10dp"
                >
                <Button
                    android:id="@+id/btn_cancel"
                    android:layout_width="100dp"
                    android:text="Cancel"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp"/>
                <Button
                    android:id="@+id/btn_next_steps"
                    android:layout_width="100dp"
                    android:text="Next"
                    android:textAllCaps="false"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    />
            </LinearLayout>

        </LinearLayout>

    </com.bachnn.myapplication.view.CustomView>

</LinearLayout>